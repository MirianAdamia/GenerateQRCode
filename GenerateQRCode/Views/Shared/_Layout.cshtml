@{
    ViewData["Title"] = "QR კოდის გენერატორი";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QR Code Generator</title>

    <!-- Bootstrap and Custom CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Custom CSS for Effects -->
    <style>
        /* Background and font setup */
        body {
            background: linear-gradient(120deg, #f6d365 0%, #fda085 100%);
            font-family: 'Poppins', sans-serif;
            color: #333;
        }

        .navbar {
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
        }

            .navbar:hover {
                background-color: rgba(255, 255, 255, 1);
            }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: #ff6f61;
            transition: color 0.3s ease;
        }

            .navbar-brand:hover {
                color: #d94f40;
            }

        footer {
            background-color: #fff;
            padding: 1.5rem 0;
            text-align: center;
            border-top: 1px solid #ddd;
        }

        /* Button Hover Effect */
        .btn-custom {
            background-color: #ff6f61;
            color: white;
            padding: 10px 20px;
            border-radius: 30px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #d94f40;
                transform: scale(1.05);
            }

        /* Animation for content appearance */
        main {
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 1s forwards;
        }

        @@keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">QR კოდის გენერატორი</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Add more links here if necessary -->
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- This is the placeholder for the content of specific views -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Ensure this line is present -->
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - GenerateQRCode - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
